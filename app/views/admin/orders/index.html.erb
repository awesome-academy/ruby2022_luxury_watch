<div class="col-sm-10 main">
  <h1 class="page-header"><%= t ".title" %></h1>
  <%= form_tag admin_orders_path, method: :get, class: "form-inline" do %>
    <%= text_field_tag :id, params[:id], placeholder: t("search"), class: "form-control" %>
    <%= submit_tag t("search"), class: "btn btn-primary mb-2" %>
  <% end %>
  <%== pagy_bootstrap_nav(@pagy) %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th><%= t "ID" %></th>
          <th><%= t "name" %>
          <th><%= t "product" %></th>
          <th><%= t "order_date" %></th>
          <th><%= t "status" %></td>
          <th><%= t "action" %></td>
        </tr>
      </thead>
      <tbody>
        <%= render @orders %>
      </tbody>
    </table>
  </div>
</div>
