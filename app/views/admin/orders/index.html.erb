<div class="col-sm-10 main">
  <h1 class="page-header"><%= t ".title" %></h1>
  <%= form_tag admin_orders_path, method: :get, class: "form-inline" do %>
    <%= text_field_tag :str, params[:str], placeholder: t("search"), class: "form-control" %>
    <%= submit_tag t("search"), class: "btn btn-primary mb-2" %>
  <% end %>
  <%== pagy_bootstrap_nav(@pagy) %>
  <div>
    <ul class="list-inline">
      <li class="list-inline-item">
        <% Order.statuses.each do |key, val| %>
          <%= form_tag admin_orders_path, method: :get, class: "form-inline pull-right" do %>
            <%= hidden_field_tag :find_status, key %>
            <%= submit_tag t("order_status."<< key.to_s), class: "btn btn-#{key}" %>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
  <div>
    <ul class="list-inline">
      <li class="list-inline-item">
        <%= form_tag admin_orders_path, method: :get, class: "form-inline pull-right" do %>
          <%= hidden_field_tag :status_change,  Settings.order_status.confirmed %>
          <%= submit_tag t(".comfirm_all_new"), class: "btn btn-confirmed" %>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th><%= t "ID" %></th>
          <th><%= t "name" %>
          <th><%= t "product" %></th>
          <th><%= t "order_date" %></th>
          <th><%= t "status" %></td>
          <th><%= t "action" %></td>
        </tr>
      </thead>
      <tbody>
        <%= render @orders %>
      </tbody>
    </table>
  </div>
</div>
