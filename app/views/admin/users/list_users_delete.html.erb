<div class="col-sm-10 main">
  <h1 class="page-header"><%= t "dashboard" %></h1>
  <div class="top-admin-user">
    <%= link_to t("admin.list_users_delete"), admin_list_user_delete_path %>
    <%= search_form_for @q, url: admin_search_users_path, remote: true, method: :get, class: "form-inline" do %>
      <%= text_field_tag :name, "", placeholder: t("search_user"), class: "form-control" %>
      <%= submit_tag t("search"), class: "btn btn-primary mb-2" %>
    <% end %>
  </div>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t "user.id" %></th>
          <th><%= t "user.name" %></th>
          <th><%= t "user.email" %></th>
          <th><%= t "user.phone" %></th>
          <th><%= t "user.current_sign_in_ip" %></th>
          <th><%= t "user.last_sign_in_ip" %></th>
          <th><%= t "user.sign_in_count" %></th>
          <th><%= t "user.current_sign_in_at" %></th>
          <th><%= t "user.last_sign_in_at" %></th>
          <th><%= t "admin.restore" %></th>
        </tr>
      </thead>
      <tbody class="list-user">
        <%= render @users %>
        <%== pagy_bootstrap_nav(@pagy) %>
      </tbody>
    </table>
  </div>
</div>
