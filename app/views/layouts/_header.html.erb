<div class="top-header">
  <div class="container">
    <div class="top-header-main">
      <div class="col-lg-6 top-header-left">
        <div class="box" id="choose-language">
          <span><%= t "languages" %></span>
          <ul class="sub-language">
            <li><%= link_to t("english"), locale: :en %></li>
            <li><%= link_to t("vietnamese"), locale: :vi %></li>
          </ul>
        </div>
        <div class="box" id="profile">
          <span><%= t "profile" %></span>
          <ul class="sub-profile">
            <% if logged_in? %>
              <li><%= link_to t("logout"), logout_path, method: :delete %></li>
              <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
              <li><%= link_to t("my_order"), history_orders_path(Settings.order_wait) %></li>
            <% else %>
              <li><%= link_to t("login"), login_path %></li>
              <li><%= link_to t("singup"), signup_path %></li>
            <% end %>
          </ul>
        </div>
        <div class="box">
          <% if logged_in? %>
            <span><%= current_user.name %></span>
            <% if current_user.admin? %>
              <span class="admin-page"><%= link_to t("admin.admin"), admin_root_path %></span>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="top-header-left">
        <div class="cart box_1">
          <%= link_to cart_path do %>
            <div class="total">
              <span class="simpleCart_total">
                <span class="badge"><%= total_cart %></span>
                <%= image_tag "cart-1.png" %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="logo">
  <%= link_to root_path do %>
    <h1><%= t "app_name" %></h1>
  <% end %>
</div>
<div class="header-bottom">
  <div class="container">
    <div class="header">
      <div class="col-md-9 header-left">
      <div class="top-nav">
        <ul class="memenu skyblue"><li class="active"><%= link_to t("home"), root_path %></li>
          <li class="grid">
            <%= link_to t("product"), root_path %>
          </li>
          <li class="grid">
            <%= link_to t("contact"), contact_path %>
          </li>
        </ul>
      </div>
      <div class="clearfix"> </div>
    </div>
    <div class="col-md-3 header-right">
      <div class="search-bar">
        <%= form_tag homes_path, method: :get do %>
          <%= text_field_tag :name, params[:name], placeholder: t("search"), class: "d-inline-block" %>
          <%= submit_tag t("search"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="clearfix"> </div>
    </div>
  </div>
</div>
