<div class="top-header">
  <div class="container">
    <div class="top-header-main">
      <div class="col-md-8 top-header-left">
        <div class="drop">
          <div class="box">
            <%= link_to t("login"), contact_path %>
          </div>
          <div class="box">
            <%= link_to t("singup"), contact_path %>
          </div>
          <div class="box">
            <%= link_to t("english"), locale: :en %>
          </div>
          <div class="box">
            <%= link_to t("vietnamese"), locale: :vi %>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
      <div class="col-md-4 top-header-left">
        <div class="cart box_1">
          <%= link_to cart_path do %>
            <div class="total">
              <span class="simpleCart_total"></span>
            </div>
            <%= image_tag "cart-1.png" %>
          <% end %>
          <p><%= link_to t("empty_cart"), "/" %></p>
          <div class="clearfix"> </div>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
<div class="logo">
  <%= link_to root_path do %>
    <h1><%= t "app_name" %></h1>
  <% end %>
</div>
<div class="header-bottom">
  <div class="container">
    <div class="header">
      <div class="col-md-9 header-left">
      <div class="top-nav">
        <ul class="memenu skyblue"><li class="active"><%= link_to t("home"), root_path %></li>
          <li class="grid">
            <%= link_to t("product"), products_path %>
          </li>
          <li class="grid">
            <%= link_to t("contact"), contact_path %>
          </li>
        </ul>
      </div>
      <div class="clearfix"> </div>
    </div>
    <div class="col-md-3 header-right">
      <div class="search-bar">
        <input type="text" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
        <input type="submit" value="">
      </div>
    </div>
    <div class="clearfix"> </div>
    </div>
  </div>
</div>
